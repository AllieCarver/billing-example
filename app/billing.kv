<BillingUI>:
    console: c
    BuyStuff:
        size_hint: (0.5, 1.0)
        pos_hint: {'x': 0.0, 'y': 0.0}
        orientation: 'vertical'
        product_list: pl
        BoxLayout: 
            id: pl
            size_hint: (1.0, 0.7)
            orientation: 'vertical'
        Label:
            text: "Check logcat for logging."
            id: c
            size_hint: (1.0, 0.3)
            text_size: (self.width * 0.94, None)
            font_size: self.height * 0.1
            
    AfterConsumption:
        size_hint: (0.5, 1.0)
        pos_hint: {'x': 0.5, 'y': 0.0}
        orientation: 'vertical'
        consumed_list: cl
        GridLayout:
            id: cl
            cols: 2
            col_default_width: self.width * 0.5
            col_force_default: True
            row_default_height: self.height * 0.2
            row_force_default: True

<AskUser@RelativeLayout>:
    Label:
        text_size: (self.width, self.height)
        # font sizes based on avg of height and width
        font_size: (self.width + self.height) / 2.0 * 0.07
        text: root.text
        size_hint: (0.9, 0.6)
        pos_hint: {'x' : 0.05, 'y' : 0.475}
        text_size: self.size
    Button:
        text: root.action_name
        size_hint: (0.425, 0.3)
        pos_hint: {'x' : 0.525, 'y': 0.025}
        on_press: root.answer(True)
        font_size: self.height * 0.34
    Button:
        text: 'Cancel'
        size_hint: (0.425, 0.3)
        pos_hint: {'x' : 0.05, 'y': 0.025}
        on_press: root.answer(False)
        font_size: self.height * 0.34